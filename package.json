{
  "name": "node-react-template",
  "version": "1.0.0",
  "description": "Bootstrap project for node+react apps",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build-client": "webpack --config webpack.prod.js",
    "build-server": "babel src/server --out-dir dist/server",
    "build": "npm run build-client && npm run build-server",
    "start": "node dist/server/index.js",
    "dev-client": "webpack-dev-server --host 0.0.0.0 --config webpack.dev.js",
    "dev-server": "nodemon --exec babel-node src/server/index.js",
    "dev": "concurrently \"npm run dev-server\" \"npm run dev-client\"",
    "lint": "eslint src/"
  },
  "author": "Marko Pandurovic",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^4.1.3",
    "concurrently": "^4.0.1",
    "css-loader": "^1.0.0",
    "express": "^4.16.3",
    "node-sass": "^4.9.4",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "reactstrap": "^6.5.0",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.0",
    "babel-loader": "^8.0.0",
    "clean-webpack-plugin": "^0.1.19",
    "eslint": "^5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.3",
    "nodemon": "^1.18.4",
    "rimraf": "^2.6.2",
    "webpack": "^4.5.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.8",
    "webpack-merge": "^4.1.4"
  }
}
